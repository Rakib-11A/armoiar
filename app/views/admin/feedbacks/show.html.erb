<% content_for :page_title do %>
  <%= link_to 'Feedbacks', admin_feedbacks_path %> /
  <%= @feedback.name %>
<% end %>
<p>
  <strong>Feedback By:</strong>
  <%= @feedback.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @feedback.email %>
</p>

<p>
  <strong>Product Quality: </strong>
  <%=  @feedback.product_quality == '4' ? 'Very Good' :  @feedback.product_quality == '3' ? 'Good' : @feedback.product_quality == '2' ? 'Fair' : @feedback.product_quality == '1' ? 'Poor' : 'No feedback'%>
</p>

<p>
  <strong>Product Price: </strong>
  <%=  @feedback.product_price == '4' ? 'Very Good' :  @feedback.product_price == '3' ? 'Good' : @feedback.product_price == '2' ? 'Fair' : @feedback.product_price == '1' ? 'Poor' : 'No feedback'%>
</p>
<p>
  <strong>Customer Service: </strong>
  <%=  @feedback.customer_service == '4' ? 'Very Good' :  @feedback.customer_service == '3' ? 'Good' : @feedback.customer_service == '2' ? 'Fair' : @feedback.customer_service == '1' ? 'Poor' : 'No feedback'%>
</p>

<p>
  <strong> Rating: </strong>
  <%=  @feedback.rate == 5 ? '*****' :  @feedback.rate == 4 ? '****' : @feedback.rate == 3 ? '***' : @feedback.rate == 2 ? '**' : '*'%>
</p>

<p>
  <strong>Message:</strong>
  <%= @feedback.message %>
</p>

<p>
  <strong>Status:</strong>
  <%= @feedback.is_checked == false ? (link_to 'Check', checked_feedback_admin_feedback_path(@feedback), method: :post, data: {confirm: 'Are you sure?'}) : "Checked" %>
</p>

<p>
  <strong>Checked By:</strong>
  <%= @feedback.checked_by ? (link_to @feedback.checked_by.name,edit_admin_user_path(@feedback.checked_by)) : "Not Checked Yet" %>
</p>
<%= link_to 'Back', admin_feedbacks_path, class: 'btn btn-success ' %>
