<% content_for :page_title do %>
  Barcode
<% end %>

<% content_for :page_actions do %>
  <%= link_to 'Print', '#', 'data-toggle' => 'modal', 'data-target' => '#print_settings', class: 'btn btn-success print-button' %>
<% end if @print_barcodes.any? %>
<% if @print_barcodes.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product Code</th>
        <th>Product Name</th>
        <th>Product Barcode</th>
        <th>Quantity</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @print_barcodes.each do |print| %>
        <tr>
          <td><%= print.product.code  %></td>
          <td><%= print.product.name  %></td>
          <td><%= print.product.barcode %></td>
          <td><%= print.quantity %></td>
          <td><%= link_to "Edit", edit_admin_print_barcode_path(print) %></td>
          <td><%= link_to "Destroy", admin_print_barcode_path(print), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">Total </th>
        <td><%= current_user.total_quantity %></td>
      </tr>

    </tfoot>
  </table>
<% else %>

<% end %>
<%= render 'print_setting_popup' %>