<%= render partial: 'admin/suppliers/sidebar', locals: {current: :address} %>

<% content_for :page_title do %>
  <%= link_to @supplier.email, edit_admin_supplier_path(@supplier) %> /
  <%= t(:addresses) %>
<% end %>

<div data-hook="admin_user_addresses" id="admin_user_edit_addresses">
  <div data-hook="admin_user_edit_form_header">
    <%= render partial: 'admin/shared/error_messages', locals: {target: @supplier} %>
  </div>

  <div data-hook="admin_user_address_edit_form">
    <%= form_for [:admin, @supplier], as: :user, url: address_admin_supplier_url(@supplier), method: :put do |f| %>

      <%= render partial: 'address_form', locals: {f: f} %>
    <% end %>
  </div>
</div>

<%#= render 'admin/users/lifetime_stats' %>