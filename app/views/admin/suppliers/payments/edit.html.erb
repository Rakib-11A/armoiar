<% content_for :page_title do %>
  <%= render partial: 'admin/shared/suppliers_module', locals: {current: :account} %>
<% end %>
<% content_for :page_title do %>
  <%= link_to t(:suppliers), admin_suppliers_path %> /
  <%= link_to t(:payments), admin_suppliers_payments_path %> /
  <%= "Editing Payments " %>
<% end %>
<% content_for :page_actions do %>
  <%= render "admin/shared/supplier_links"  %>
<% end %>

<div data-hook="admin_user_edit_general_settings" class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      <%= t(:payments_details) %>
    </h1>
  </div>

  <div class="panel-body">
    <div data-hook="admin_user_edit_form_header">
      <%= render partial: 'admin/shared/error_messages', locals: {target: @suppliers_payment} %>
    </div>

    <div data-hook="admin_user_edit_form">
      <%= form_for [:admin, @suppliers_payment], url: admin_suppliers_payment_path(@suppliers_payment), method: :put do |f| %>
        <%= render partial: 'form', locals: {f: f} %>

        <div data-hook="admin_user_edit_form_button">
          <%= render 'admin/shared/form_actions', record: f.object, cancel: admin_suppliers_payments_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>