<div data-hook="admin_user_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :supplier_id, class: ['form-group'] do %>
      <%= f.label :supplier_id, t(:suppliers) %>
      <%= f.select :supplier_id, User.suppliers.map{|c| [c.name, c.id]}, {prompt: "Select One"}, :class => "form-control" %>
      <%= f.error_message_on :supplier_id %>
    <% end %>

    <%= f.hidden_field :supplier_id %>
    <%= f.hidden_field :invoice_id %>
    <%= f.hidden_field :paid_by_id, value: current_user.id %>
    <%= f.field_container :method, class: ['form-group'] do %>
      <%= f.label :method, t(:method) %>
      <%= f.text_field :method, :class => "form-control" %>
      <%= f.error_message_on :method %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :commission, class: ['form-group'] do %>
      <%= f.label :commission, t(:commission) %>
      <%= f.number_field :commission, :class => "form-control" %>
      <%= f.error_message_on :commission %>
    <% end %>

    <%= f.field_container :amount, class: ['form-group'] do %>
      <%= f.label :amount, t(:amount) %>
      <%= f.number_field :amount, :class => 'form-control' %>
      <%= f.error_message_on :amount %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :payment_date, class: ['form-group'] do %>
      <%= f.label :payment_date, t(:payment_date) %>
      <%= f.date_field :payment_date, :class => "form-control date" %>
      <%= f.error_message_on :payment_date %>
    <% end %>

    <%= f.field_container :paid_to, class: ['form-group'] do %>
      <%= f.label :paid_to, t(:paid_to) %>
      <%= f.text_field :paid_to, :class => 'form-control' %>
      <%= f.error_message_on :paid_to %>
    <% end %>
  </div>

</div>
