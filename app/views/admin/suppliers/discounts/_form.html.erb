<div class="row">
  <div class="col-md-6">
    <label>Supplier:</label>
    <%= @invoice.present? ? @invoice.supplier.name : f.object.supplier.name %>
    <%= link_to "Invoice##{f.object.invoice_id}", admin_suppliers_invoice_path(f.object.invoice_id) %>
  </div>
  <%= f.hidden_field :invoice_id %>
  <%= f.hidden_field :invoice_no , :value => @invoice.no %>

</div>
<div data-hook="admin_suppliers_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :discount_reason, class: ['form-group'] do %>
      <%= f.label :discount_reason, t(:discount_reason) %>
      <%= f.text_field :discount_reason, :class => 'form-control' %>
      <%= f.error_message_on :discount_reason %>
    <% end %>
    <%= f.field_container :amount, class: ['form-group'] do %>
      <%= f.label :amount, t(:amount) %>
      <%= f.number_field :amount, min: 0, :class => 'form-control' %>
      <%= f.error_message_on :amount %>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= f.field_container :date, class: ['form-group'] do %>
      <%= f.label :date, t(:date) %>
      <%= f.date_select :date, {}, :class => "form-control date"%>
      <%= f.error_message_on :date %>
    <% end %>
    <%= f.hidden_field :discount_by , :value => current_user.name %>
  </div>

</div>
