<div data-hook="admin_user_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :supplier_id, class: ['form-group'] do %>
      <%= f.label :supplier_id, t(:suppliers) %>
      <%= f.select :supplier_id, User.suppliers.map{|c| [c.name, c.id]}, {prompt: "Select One"}, :class => "form-control", id: 'supplier_id' %>
      <%= f.error_message_on :supplier_id %>
    <% end %>

    <%= f.field_container :no, class: ['form-group'] do %>
      <%= f.label :no, t(:no) %>
      <%= f.text_field :no, :class => 'form-control' %>
      <%= f.error_message_on :no %>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= f.field_container :amount, class: ['form-group'] do %>
      <%= f.label :amount, t(:amount) %>
      <%= f.number_field :amount, min: 0, :class => 'form-control' %>
      <%= f.error_message_on :amount %>
    <% end %>

    <%= f.field_container :transport_cost, class: ['form-group'] do %>
      <%= f.label :transport_cost, t(:transport_cost) %>
      <%= f.number_field :transport_cost, min: 0, :class => 'form-control' %>
      <%= f.error_message_on :transport_cost %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :date, class: ['form-group'] do %>
      <%= f.label :date, t(:date) %>
      <%= f.date_select :date, {}, :class => "form-control date"%>
      <%= f.error_message_on :date %>
    <% end %>
    <%= f.field_container :attachments, class: ['form-group'] do %>
      <%= f.fields_for :attachments do |ff| %>
        <%= ff.label :picture, t(:picture) %>
        <%= ff.file_field :picture, :class => "form-control" %>
      <% end %>
    <% end %>
  </div>



</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('#supplier_id').select2();
    });
</script>