<% content_for :page_title do %>
  <%= link_to t(:suppliers), admin_suppliers_url %> /
<% end %>
<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_user_tab_options">
    <li<%== ' class="active"' if current == :account %>>
      <%= link_to_with_icon 'user', t(:"admin.supplier.account"), edit_admin_supplier_path(@supplier) %>
    </li>
    <li<%== ' class="active"' if current == :address %>>
      <%= link_to_with_icon 'address-book-o', t(:"admin.supplier.addresses"), address_admin_supplier_path(@supplier) %>
    </li>
    <li<%== ' class="active"' if current == :orders %>>
      <%= link_to_with_icon 'shopping-cart', 'Orders', orders_admin_supplier_path(@supplier) %>
    </li>
  </ul>
<% end %>
