<div data-hook="admin_user_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :email, t(:name) %>
      <%= f.text_field :name, :class => 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.hidden_field :role %>

    <%= f.field_container :email, class: ['form-group'] do %>
      <%= f.label :email, t(:email) %>
      <%= f.email_field :email, :class => 'form-control' %>
      <%= f.error_message_on :email %>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= f.field_container :password, class: ['form-group'] do %>
      <%= f.label :password, t(:password) %>
      <%= f.password_field :password, :class => 'form-control' %>
      <%= f.error_message_on :password %>
    <% end %>

    <%= f.field_container :password_confirmation, class: ['form-group'] do %>
      <%= f.label :password_confirmation, t(:confirm_password) %>
      <%= f.password_field :password_confirmation, :class => 'form-control' %>
      <%= f.error_message_on :password_confirmation %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :company, class: ['form-group'] do %>
      <%= f.label :company, t(:company) %>
      <%= f.text_field :company, :class => 'form-control' %>
      <%= f.error_message_on :company %>
    <% end %>

    <%= f.field_container :initial_balance, class: ['form-group'] do %>
    <%= f.label :initial_balance, t(:initial_balance) %>
    <%= f.number_field :initial_balance, min: 0, :class => 'form-control' %>
    <%= f.error_message_on :initial_balance %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :initial_balance_date, class: ['form-group'] do %>
      <%= f.label :initial_balance_date, t(:initial_balance_date) %>
      <%= f.date_field :initial_balance_date, :class => 'form-control' %>
      <%= f.error_message_on :initial_balance_date %>
    <% end %>

    <%= f.field_container :mobile, class: ['form-group'] do %>
    <%= f.label :mobile, t(:mobile) %>
    <%= f.text_field :mobile, :class => 'form-control' %>
    <%= f.error_message_on :mobile %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :landphone, class: ['form-group'] do %>
      <%= f.label :landphone, t(:landphone) %>
      <%= f.text_field :landphone, :class => 'form-control' %>
      <%= f.error_message_on :landphone %>
    <% end %>

    <%#= f.field_container :password_confirmation, class: ['form-group'] do %>
    <%#= f.label :password_confirmation, t(:confirm_password) %>
    <%#= f.password_field :password_confirmation, :class => 'form-control' %>
    <%#= f.error_message_on :password_confirmation %>
    <%# end %>
  </div>


</div>
