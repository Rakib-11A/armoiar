<div class="process-invoice-list">
  <table class="table table-striped table-bordered">
    <thead>
    <tr>
      <th> Sr.No</th>
      <th> Invoice Ref</th>
      <th> Invoice Date</th>
      <th> Method</th>
      <th> Amount</th>
      <th> Refund</th>
      <th> Discount</th>
      <th> Commission</th>
      <th> Paid</th>
      <th> Balance</th>
      <th> Pay</th>
      <th> Pay Amount</th>
    </tr>
    </thead>
    <tbody>
    <% refund_total = 0 %>
    <% discount_total = 0 %>
    <% supplier.active_invoice.each do |invoice| %>
      <% refund_total += invoice.total_refund %>
      <% discount_total += invoice.total_discount %>
      <%= render 'invoice', invoice: invoice %>
    <% end %>
    </tbody>
    <tfoot>
    <tr>
      <th colspan="4" class="right-aligned"> Total:</th>
      <th> <%= supplier.invoices.sum(:amount) %></th>
      <th> <%= refund_total %></th>
      <th> <%= discount_total %></th>
      <th> </th>
      <th> <%= supplier.invoices.map(&:paid).sum %></th>
      <th> <%= supplier.invoices.map(&:due_amount).sum %></th>
    </tr>
    </tfoot>
  </table>
</div>