<%= form_with(model: gallery_image, local: true) do |form| %>
  <% if gallery_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gallery_image.errors.count, "error") %> prohibited this gallery image from being
        saved:</h2>

      <ul>
        <% gallery_image.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= form.label :image, 'Image' %>
    <%= form.file_field :image, id: :admin_gallery_image_image, class: 'form-control' %>
  </div>

  <div class="form-group field">
    <%= form.label :position %>
    <%= form.text_field :position, id: :admin_gallery_image_position, class: 'form-control' %>
  </div>

  <%= render 'admin/shared/form_actions', cancel: admin_gallery_images_path, record: form.object %>
<% end %>
